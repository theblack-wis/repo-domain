{
  "functions": {
    "api/**/*.php": {
      "runtime": "vercel-php@0.5.2"
    }
  },
  "routes": [
    { "src": "/data/(.*)$", "dest": "/api/data/api.php?c=$1" },
    { "src": "/update/(.*)", "dest": "/api/update/$1" },
    { "src": "/test/(.*)$", "dest": "/api/src/to.php?c=$1" },
    { "src": "/(.*)$", "dest": "/api/?u=$1" }
  ],
  "env": {
    "NOW_PHP_FOO": "bar3"
  },
  "build": {
    "env": {
      "NOW_PHP_DEBUG": "1"
    },
    
    "config": {
      "includeFiles": ["help*.php"],
    }
  }
}
