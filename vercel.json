{
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.5.0"
    }
  },
  "routes": [
    { "src": "/txt", "dest": "/api/php.txt" },
    { "src": "/(index.php.*)", "dest": "/api/?u=$1" },
    { "src": "/(.*)", "dest": "/api/$1" }
  ],
  "build": {
    "env": {
      "NOW_PHP_DEBUG": "1"
    }
  }
}
